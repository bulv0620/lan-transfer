{
  "name": "lan-transfer",
  "version": "1.0.0",
  "description": "简单好用的文件传输工具",
  "main": "app.js",
  "scripts": {
    "start": "electron app.js",
    "build": "electron-builder --win --x64"
  },
  "author": "bulv<bulv0620@163.com>",
  "build": {
    "productName": "WIFI快传",
    "appId": "com.163.bulv0620",
    "copyright": "2022 bulv",
    "compression": "store",
    "directories": {
      "output": "build"
    },
    "asar": false,
    "win": {
      "icon": "./src/assets/imgs/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "WIFI快传"
    }
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.1.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "electron-localstorage": "^1.0.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0"
  }
}
